%section{style: "margin-top: -30px;"}
  .container{width: '70%'}
    %br
    .row
      .container{style: 'width: 70%;'}
        .text-xs-center
          .col-xs-4
            = image_tag('taxi.svg', width: '70px')
          .col-xs-4
            = image_tag('bicycle.svg', width: '70px')
          .col-xs-4
            = image_tag('bus.svg', width: '70px')
    .row
      %h3 National Projects
    %hr.featurette-divider
    %br
    .row
      - @projects.where(category: 'National').each do |project|
        .col-xl-4
          .panel.panel-default
            .panel-heading{:style => "background: #8ACABD; color: #fff;"}
              %h3.panel-title
                = project.title
            .panel-body
              = project.description
            - if project.link
              .panel-footer
                = link_to "Read More", project.link
