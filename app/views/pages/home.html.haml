        .text-xs-center
          %h3
            Recent News:
    .row
      .container{style: 'width: 90%;'}
        .flex-row.row
          - @updates.each do |update|
            .col-xs-6.col-sm-4.col-lg-3
              .thumbnail
                - if update.image_url
                  = image_tag(update.image_url)
                .caption
                  %h3
                    - if update.link
                      = link_to update.title, update.link
                    - else
                      = update.title
                  %p.flex-text
                    = update.content

