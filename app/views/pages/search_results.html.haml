%section{style: "margin-top: -20px"}
  .jumbotron{:style => "background: url(#{asset_url 'pattern.svg'}) no-repeat center center; "}
    .container.text-xs-center
      %h1.display-3{:style => ""} Search Results
      %p.lead{:style => "text-transform: uppercase;"} Expertise in the Interpretation and Forecasting of Travel
      %br
%section{style: "margin-top: -30px;"}
  .container{width: '70%'}
    %br
    .row
      .container{style: 'width: 70%;'}
        .text-xs-center
          .col-xs-4
            = image_tag('taxi.svg', width: '70px')
          .col-xs-4
            = image_tag('bicycle.svg', width: '70px')
          .col-xs-4
            = image_tag('bus.svg', width: '70px')
    %hr.featurette-divider
    %br
      .row
        .col-md-10.col-md-offset-1
          .panel.panel-default
            .panel-heading{:style => "background: #8ACABD; color: #fff;"}
              %h3.panel-title
                Topic Briefs
            .panel-body
              .row
              .col-md-9
                %ul
                  - @topic_briefs.each do |topic_brief|
                    %li
                      = link_to "#{topic_brief.title.titleize} - (#{topic_brief.heading&.titleize})", document_path(topic_brief, :format => 'pdf')
              .col-md-3
                = link_to 'See All Topic Briefs', topic_briefs_path, class: 'btn btn-sm btn-secondary'
    %hr.featurette-divider
    %br
      .row
        .col-md-10.col-md-offset-1
          .panel.panel-default
            .panel-heading{:style => "background: #54BBC2; color: #fff;"}
              %h3.panel-title
                Publications
            .panel-body
              .row
              .col-md-9
                %ul
                  - @publications.each do |publication|
                    %li
                      = link_to "#{publication.title.titleize}", document_path(publication, :format => 'pdf')
              .col-md-3
                = link_to 'See All Publications', publications_path, class: 'btn btn-sm btn-secondary'
    %hr.featurette-divider
    %br
      .row
        .col-md-10.col-md-offset-1
          .panel.panel-default
            .panel-heading{:style => "background: #4B9EBC; color: #fff;"}
              %h3.panel-title
                Power Points
            .panel-body
              .row
              .col-md-9
                %ul
                  - @power_points.each do |power_point|
                    %li
                      = link_to "#{power_point.title.titleize} - (#{power_point.heading&.titleize})", document_path(power_point, :format => 'pdf')
              .col-md-3
                = link_to 'See All Power Points',  publications_path(anchor: 'power-points'), class: 'btn btn-sm btn-secondary'
    %hr.featurette-divider
    %br
      .row
        .col-md-10.col-md-offset-1
          .panel.panel-default
            .panel-heading{:style => "background: #2D9DC1; color: #fff;"}
              %h3.panel-title
                Projects
            .panel-body
              .row
              .col-md-9
                %ul
                  - @projects.each do |project|
                    %li
                      = link_to "#{project.title.titleize} - (#{project.category&.titleize})", document_path(project, :format => 'pdf')
              .col-md-3
                = link_to 'See All Projects', projects_path, class: 'btn btn-sm btn-secondary'
    .row
      .container{style: 'width: 70%;'}
        .text-xs-center
          .col-xs-4
            = image_tag('traffic-light.svg', width: '70px')
          .col-xs-4
            = image_tag('school-bus.svg', width: '70px')
          .col-xs-4
            = image_tag('airplane.svg', width: '70px')
    %br

  %hr.featurette-divider
  .row
    .container{style: 'width: 70%;'}
      .text-xs-center
        %h3
          Let's Work Together!
  .row
    .container{style: 'width: 70%; margin-bottom: 20px;'}
      .text-xs-center
        .btn.btn-secondary.btn-lg
          Contact Me
  .row
    .container{style: 'width: 70%;'}
      .text-xs-center
        .col-xs-4
          = image_tag('luggage.svg', width: '70px')
        .col-xs-4
          = image_tag('electric-car.svg', width: '70px')
        .col-xs-4
          = image_tag('parking.svg', width: '70px')
