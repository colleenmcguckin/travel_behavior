%section{style: "margin-top: -20px"}
  .jumbotron.img-responsive{:style => "background: url(#{asset_url 'pedestrians.jpeg'}) no-repeat center center; background-size: cover; opacity: 1; "}
    .container.text-xs-center.text-white
      %h1.display-3{:style => ""} Projects
      %p.lead{:style => "text-transform: uppercase;"} Expertise in the Interpretation and Forecasting of Travel
      %br
%section{style: "margin-top: -30px;"}
  .page-container
    %p{style: "margin-left: 60px; margin-right: 60px; margin-top: 20px; margin-bottom: 20px;"}
    %hr.featurette-divider
    %br
    %h2.text-center
      Publications
    %br
    .row
      .col-xs-10.col-xs-offset-1
        #accordion.panel-group
          - @publications.each_with_index do |publication, index|
            .panel.panel-default
              .panel-heading
                %h4.panel-title
                  %a.accordion-toggle{"data-parent" => "#accordion", "data-toggle" => "collapse", href: "#category_#{index}"}
                    = publication.title
              .panel-collapse.collapse{:id => "category_#{index}"}
                .panel-body{style: 'color: black;'}
                  = publication.summary
                .panel-footer
                  = link_to "#{publication.title}", document_path(publication, :format => 'pdf')
    %hr.featurette-divider
    %br
    %a{name: 'power-points'}
    %h2.text-center
      Presentations
    %br
      .row
        .col-xs-10.col-xs-offset-1
          #accordion.panel-group
            - @power_points.pluck(:heading).uniq.each_with_index do |heading, index|
              .panel.panel-default
                .panel-heading
                  %h4.panel-title
                    %a.accordion-toggle{"data-parent" => "#accordion", "data-toggle" => "collapse", href: "#heading_#{index}"}
                      = heading.titleize
                .panel-collapse.collapse{:id => "heading_#{index}"}
                  .panel-body
                    %ul
                      - @power_points.where(heading: heading).each do |power_point|
                        %li
                          = link_to "#{power_point.title}", document_path(power_point, :format => 'pdf')

    %hr.featurette-divider
    .row
      .container{style: 'width: 70%;'}
        .text-xs-center{style: 'color: black;'}
          %h3
            Let's Work Together!
    .row
      .container{style: 'width: 70%; margin-bottom: 20px;'}
        .text-xs-center
          = render partial: 'contact_modal'
